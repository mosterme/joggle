<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<!-- $Id$ -->
	<modelVersion>4.0.0</modelVersion>
	<groupId>joggle</groupId>
	<artifactId>joggle</artifactId>
	<packaging>war</packaging>
	<version>0.03</version>
	<name>joggle</name>
	<description>joggle is short for "Java OGG LEnder"</description>
	<url>http://code.google.com/p/joggle/</url>
	<inceptionYear>2011</inceptionYear>
	<scm>
		<connection>scm:svn:http://joggle.googlecode.com/svn/trunk/</connection>
		<developerConnection>scm:svn:https://joggle.googlecode.com/svn/</developerConnection>
		<url>http://code.google.com/p/joggle/source/browse/</url>
	</scm>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<repositories>
		<repository>
			<id>jboss.releases</id>
			<name>JBoss Maven Repository</name>
			<url>https://repository.jboss.org/nexus/content/groups/public/</url>
		</repository>
	</repositories>
	<dependencies>
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>1.7.1</version>
		</dependency>
		<dependency>
			<groupId>org</groupId>
			<artifactId>jaudiotagger</artifactId>
			<version>2.0.3</version>
		</dependency>
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-entitymanager</artifactId>
			<version>3.6.6.Final</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.6.1</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.0.1</version>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.4</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.hsqldb</groupId>
			<artifactId>hsqldb</artifactId>
			<version>2.2.4</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.6.1</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<finalName>${project.name}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<phase>compile</phase>
						<configuration>
							<target name="build.properties">
								<tstamp><format property="timestamp" pattern="yyyy-MM-dd'T'HH:mm:ssZ" locale="en"/></tstamp>
								<exec outputproperty="revision" executable="svnversion" failifexecutionfails="false"/>
								<echo>appending to target/classes/joggle.properties</echo>
								<echo>joggle.application.revision=Revision: ${revision}</echo>
								<echo>joggle.application.timestamp=${timestamp}</echo>
								<echo>joggle.application.version=Version: ${project.version}</echo>
								<echo></echo>
								<echo file="target/classes/joggle.properties" append="true">${line.separator}joggle.application.revision=Revision: ${revision}</echo>
								<echo file="target/classes/joggle.properties" append="true">${line.separator}joggle.application.timestamp=${timestamp}</echo>
								<echo file="target/classes/joggle.properties" append="true">${line.separator}joggle.application.version=Version: ${project.version}</echo>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.1.26</version>
			</plugin>
		</plugins>
	</build>
</project>